{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "declaration": true,
    "noEmitHelpers": false,
    "pretty": true,
    "lib": ["es6", "dom"]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "index.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
